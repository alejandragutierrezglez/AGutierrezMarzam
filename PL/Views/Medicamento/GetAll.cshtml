@model ML.Medicamento

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Medicamentos</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h5>Seleccione Agregar para registrar un medicamento</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 ">
            @Html.ActionLink("Agregar", "Form", "Medicamento", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <br> <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td class="hidden">IdMedicamento</td>
                        <td>Precio</td>
                        <td>Nombre </td>
                        <td>Imagen</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Medicamento medicamento in Model.Medicamentos)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Medicamento", new { IdSKUMedicamento = medicamento.IdSKUMedicamento })"></a></td>
                            <td class="hidden">@medicamento.IdSKUMedicamento</td>
                            <td>@medicamento.Precio</td>
                            <td>@medicamento.Nombre</td>
                            <td>

                                @if (medicamento.Imagen != null)
                                {

                                    <img id="Img" src="data:image/*;base64,@medicamento.Imagen" style="width:150px ; height:150px" />

                                }
                                else
                                {
                                    <img id="Img" src="~/Imagenes/SinImagen.jpg" style="width:250px ; height:250px" />
                                }

                            </td>
                            <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-erase" href="@Url.Action("Delete", "Medicamento", new { IdSKUMedicamento = medicamento.IdSKUMedicamento })" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

